<div class="thumbnail">
  <table class="table">
    <thead>
      <th>商品名稱</th>
      <th>商品規格</th>
      <th>商品售價</th>
    </thead>
    <tbody>
      <% items.each do |item| %>
        <tr>
          <td><%= item.product.name %></td>
          <td><%= item.spec.name %></td>
          <td><%= item.product.price %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
        <td></td>
        <td></td> 
        <th>總金額：<%= order.total %></th>
    </tfoot>
  </table>
</div>