<div class="thumbnail">
  <table class="table">
    <thead>
      <th>商品名稱</th>
      <th>商品規格</th>
      <th>商品售價</th>
    </thead>
    <tbody>
      <% items.each do |item| %>
        <tr>
          <td><%= render_order_item_product_name(item) %></td>
          <td><%= render_order_item_spec_name(item) %></td>
          <td><%= render_order_item_product_price(item) %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
        <td></td>
        <td></td> 
        <th>總金額：<%= render_order_total(order) %></th>
    </tfoot>
  </table>
</div>