<h1>訂單列表</h1>

<ul id="account-order-tab"  class="nav nav-tabs">
  <li class="active"><a href="#unpaid">未付款</a></li>
  <li><a href="#in_process">處理中</a></li>
  <li><a href="#closed">已結束</a></li>
</ul>
<div class="tab-content">
  <div class="tab-pane fade active in" id="unpaid">
    <%= render "order_list", :orders => @unpaid_orders %>
  </div>
  <div class="tab-pane fade" id="in_process">
    <%= render "order_list", :orders =>  @in_process_orders %>
  </div>
  <div class="tab-pane fade" id="closed">
    <%= render "order_list", :orders =>  @closed_orders %>
  </div>
</div>


<%= content_for :javascripts do %>
<script type="text/javascript">
$('#account-order-tab a').click(function (e) {
  e.preventDefault();
  $(this).tab('show');
})
</script>
<% end %>


