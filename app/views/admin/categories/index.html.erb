<div class="row">
  <% @categories.each do |category| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= link_to(admin_category_path(category)) do %>
          <div class="caption">
            <h3><%= category.name %></h3>
            <p><%= category.description %></p>
          </div>
        <% end %>
        <%= render_edit_admin_category_path(category) %>  
        <%= render_destroy_admin_category_path(category) %>  
      </div>
    </div>
  <% end %>
</div>