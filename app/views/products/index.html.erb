<h1>全站商品</h1>

<div class="row">
  <% @products.each do |product| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="<%= product.image.url %>" alt="...">
      <div class="caption">
        <h3><%= product.name %></h3>
        <p><%= product.description %></p>
        <p><%= link_to("查看商品", product_path(product), :class => "btn btn-primary" ) %></p>
      </div>
    </div>
  </div>   
  <% end %>
</div>