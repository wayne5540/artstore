
<div class="row">
    <div class="col-md-4">
      <%= render_product_image(@product.image) %>
    </div>
    <div class="col-md-8">
      <h1><%= render_product_name(@product) %></h1>
      <p><%= render_product_desc(@product) %></p>
      <p>售價：<%= render_product_price(@product) %></p>

  </div>
  <div class="clearfix"></div>
  <hr>
  <h2>Specs</h2>
  
  <% @specs.each do |spec| %>
    <div class="col-md-4">
      <h3><%= spec.name %></h3>
      <%= simple_form_for(@cart_item, html: { class: 'form-horizontal' }) do |f|  %>
        <%= f.hidden_field :product_id, value: @product.id %>
        <%= f.hidden_field :spec_id, value: spec.id %>
        <%= f.button :submit, "加入購物車" %>
      <% end %>
    </div>
  <% end %>
  
</div>
